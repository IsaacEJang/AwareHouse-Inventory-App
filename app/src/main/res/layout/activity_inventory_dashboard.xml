                        android:layout_centerInParent="true"
                        android:text="#      "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Rows 30 - 39 Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Rows 20 - 29 Header-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/my_primary"
                    android:textSize="20sp"
                    android:text="Rows 30 - 39"/>

                <!-- Metric container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <!-- Rows 30 - 39 Metric 1 text-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Metric 1"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Rows 30 - 39 Metric 2 text-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Metric 2"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <!-- Rows 30 - 39 Metric 3 text-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:text="Metric 3"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!-- Rows 30 - 39 metric container-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <!-- Rows 30 - 39 Metric 1 text-->
                    <TextView
                        android:id="@+id/metric_1_rows_30_39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="       #"/>

                    <!-- Rows 30 - 39 Metric 2 text-->
                    <TextView
                        android:id="@+id/metric_2_rows_30_39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="#"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <!-- Rows 30 - 39 Metric 3 text-->
                    <TextView
                        android:id="@+id/metric_3_rows_30_39"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:text="#      "
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <!-- Data Buttons-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Change Data Buttons-->
                <Button
                    android:id="@+id/button_add_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Add items"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"/>

                <!-- Add Data Buttons-->
                <Button
                    android:id="@+id/button_remove_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Remove Items"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

